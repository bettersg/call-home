{
  "name": "call-home-backend",
  "version": "1.0.0",
  "description": "A more friendly way to call home",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint",
    "lint:js": "npm run lint -- . --ext .js,.ts",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:fix": "npm run lint -- --fix",
    "migration:migrate": "sequelize-cli db:migrate",
    "migration:seed": "sequelize-cli db:seed:all",
    "migration:generate": "sequelize-cli migration:generate",
    "precommit": "lint-staged",
    "start:dev": "concurrently -p \"[{name}]\" -n \"Node,TypeScript\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:node\" \"npm run watch:ts\"",
    "watch:node":  "nodemon --enable-source-maps --inspect dist/index.js",
    "watch:ts":  "tsc -w"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-http-proxy": "^1.6.0",
    "express-session": "^1.17.1",
    "express-session-sequelize": "^2.2.0",
    "helmet": "^3.22.0",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-auth0": "^1.3.2",
    "pg": "^8.0.3",
    "pg-hstore": "^2.3.3",
    "pino": "^6.4.1",
    "pino-http": "^5.2.0",
    "sequelize": "^5.21.6",
    "sequelize-cli": "^5.5.1",
    "twilio": "^3.42.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/bluebird": "^3.5.30",
    "@types/express-http-proxy": "^1.6.1",
    "@types/helmet": "0.0.47",
    "@types/morgan": "^1.9.1",
    "@types/pino-http": "^5.0.3",
    "@types/validator": "^13.0.0",
    "@types/node": "^13.13.15",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "lint-staged": "^10.1.4",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "sqlite3": "^4.1.1",
    "typescript": "^3.9.7"
  }
}
